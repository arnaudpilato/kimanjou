{% extends 'layout.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block form %}{% form_theme registrationForm 'bootstrap_5_layout.html.twig' %}{% endblock %}


{% block body %}
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-5">
                {% for flash_error in app.flashes('verify_email_error') %}
                    <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
                {% endfor %}

                <h1 class="text-center my-5">Inscription</h1>

                {{ form_start(registrationForm) }}
                {{ form_row(registrationForm.nickName) }}
                {{ form_row(registrationForm.email) }}
                {{ form_row(registrationForm.plainPassword) }}
                {{ form_row(registrationForm.agreeTerms) }}

                <div class="text-center mt-5">
                    <button class="btn btn-secondary" type="submit" >Inscription</button>
                </div>

                {{ form_end(registrationForm) }}
            </div>
        </div>
    </div>
{% endblock %}
